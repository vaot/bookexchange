!!!
%html(ng-app="bookexchange")
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : ""
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", :rel => "stylesheet"}
    = yield :stylesheets
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
    = yield(:head)
    %base(href="/")
  %body(ng-init="serverData = '#{server_data}'")
    = yield
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"
    = javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular.min.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular-route.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular-resource.js"
    = javascript_include_tag '//cdn.jsdelivr.net/angular.ui-router/0.2.13/angular-ui-router.min.js'
    = javascript_include_tag '//cdn.jsdelivr.net/angular.file-upload/1.1.11/angular-file-upload-shim.min.js'
    = javascript_include_tag '//cdn.jsdelivr.net/angular.file-upload/1.1.11/angular-file-upload.min.js'
    = javascript_include_tag "application"

